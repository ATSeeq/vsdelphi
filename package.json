{
    "name": "vsdelphi",
    "displayName": "VSDelphi",
    "description": "VSCode IDE support for Delphi",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.84.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vsdelphi.test",
                "title": "Test Delphi"
            },
            {
                "command": "vsdelphi.build",
                "title": "Build Delphi"
            },
            {
                "command": "vsdelphi.run",
                "title": "Run Delphi"
            },
            {
                "command": "vsdelphi.clean",
                "title": "Clean Delphi"
            }
        ],
        "configuration": {
            "title": "VSDelphi",
            "properties": {
                "vsdelphi.rsvarsPath": {
                    "type": "string",
                    "default": "C:\\Program Files (x86)\\Embarcadero\\Studio\\22.0\\bin\\rsvars.bat",
                    "description": "Path to the Delphi build environment vars script."
                }
            }
        },
        "keybindings": [
            {
                "key": "ctrl+f5",
                "command": "vsdelphi.run",
                "when": "editorTextFocus"
            },
            {
                "key": "shift+f5",
                "command": "vsdelphi.build",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.3",
        "@types/node": "18.x",
        "@types/vscode": "^1.84.0",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "@vscode/test-electron": "^2.3.6",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2"
    }
}
